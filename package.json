{
	"name": "oshell",
	"version": "0.1.0",
	"description": "OCaml workflow with Esy",
	"license": "MIT",
	"esy": {
		"build": "dune build -p #{self.name}",
		"release": {
			"releasedBinaries": [ "hello" ]
		}
	},
	"scripts": {
		"watch": "nodemon -w lib/ -w bin/ -x \"esy build\" -e ml",
		"main": "./_build/default/bin/oshell.exe"
	},
	"dependencies": {
		"@opam/dune": "1.5.1",
		"@opam/lambda-term": "*",
		"@opam/lwt": "^4.0.0",
		"@opam/fpath": "0.7.2",
		"@opam/result": "1.3",
		"ocaml": "~4.6.0"
	},
	"devDependencies": {
		"@opam/merlin": "^3.0.3",
		"ocaml": "~4.6.0"
	}
}
